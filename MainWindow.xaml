<Window x:Class="Lab1S3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1S3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="625,111,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock Text="{Binding TotalRegistros}" FontSize="32" />
            <TextBlock Text="Total de Registros:" FontSize="16" FontWeight="Bold"/>
        </StackPanel>

        <Button x:Name="btnAgregar" Content="Agregar"
            HorizontalAlignment="Left" Margin="132,267,0,0"
            VerticalAlignment="Top" Height="66" Width="85"
            Command="{Binding AgregarRegistroCommand}"/>

        <Button x:Name="btnMostrar" Content="Mostrar"
            HorizontalAlignment="Center" Margin="0,267,0,0"
            VerticalAlignment="Top" Height="70" Width="84"
            Command="{Binding MostrarTotalCommand}"/>

        <ListBox x:Name="lbxLista"
             ItemsSource="{Binding Registros}"
             HorizontalAlignment="Left" Height="215" Margin="37,38,0,0"
             VerticalAlignment="Top" Width="560">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Margin="10">
                            <TextBlock Text="{Binding Nombre}" 
                FontSize="14" 
                FontWeight="Bold"/>
                            <TextBlock Text="{Binding Correo}" 
                FontSize="12" 
                Foreground="Gray"/>
                            <TextBlock Text="{Binding Numero}" 
                FontSize="11" 
                Foreground="Black"
                HorizontalAlignment="Right"/>

                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
